#tag ClassProtected Class FrameCanvasInherits Canvas	#tag Event		Function MouseDown(X As Integer, Y As Integer) As Boolean		  dim i as integer		  dim hit as boolean		  		  ox=x		  oy=y		  		  selection=nil		  for i=ubound(cf) downto 0		    if cf(i).hit(x,y) then 		      hit=true		      selection=cf(i)		      cf.remove(i)		      cf.append selection		      exit		    end if		  next		  		  frameClicked(selection)		  		  me.refresh		  		  return hit		End Function	#tag EndEvent	#tag Event		Sub MouseDrag(X As Integer, Y As Integer)		  selection.offset(x-ox,y-oy)		  ox=x		  oy=y		  		  me.refresh		End Sub	#tag EndEvent	#tag Event		Sub MouseUp(X As Integer, Y As Integer)		  me.refresh		End Sub	#tag EndEvent	#tag Event		Sub Paint(g As Graphics)		  draw(g)		End Sub	#tag EndEvent	#tag MenuHandler		Function FileSave() As Boolean Handles FileSave.Action					End Function	#tag EndMenuHandler	#tag Method, Flags = &h0		Sub addFrame(frame as contentFrame)		  cf.append frame		End Sub	#tag EndMethod	#tag Method, Flags = &h21		Private Sub draw(g as graphics)		  #pragma disablebackgroundTasks		  		  dim i as integer		  		  g.foreColor=rgb(237,243,255)		  g.fillrect 0,0,g.width,g.height		  		  g.foreColor=&c000000		  g.textsize=24		  g.drawstring "Work in progress!",g.width/2-g.stringwidth("Work in progress!")/2,g.height/2		  		  g.penwidth=3		  g.penHeight=3		  for i=0 to ubound(cf)		    g.drawpicture cf(i).data,cf(i).x, cf(i).y		  next		  g.penwidth=1		  g.penHeight=1		  		  g.foreColor=&c000000		  g.drawrect 0,0,g.width,g.height		  		End Sub	#tag EndMethod	#tag Method, Flags = &h0		Function pictureRep() As picture		  dim pic as Picture=NewPicture(Width,Height,32)		  		  if pic=nil then Return nil		  		  draw(pic.Graphics)		  		  Return pic		End Function	#tag EndMethod	#tag Hook, Flags = &h0		Event frameClicked(frame as contentFrame)	#tag EndHook	#tag Note, Name = Info				Fram